\usetheme{Rochester}

\RequirePackage{pgf}

\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{navigation symbols}{}
\setbeamercovered{transparent}

\beamer@headheight=0.16\paperwidth
\definecolor{oxygenorange}{rgb}{0.31,0.20,0.13}
\definecolor{oxygengray}{rgb}{0.41,0.41,0.41}
\definecolor{oxygenlightgray}{rgb}{0.93,0.93,0.93}
\definecolor{oxygenbrown}{rgb}{0.85,0.54,0.22}
\setbeamercolor*{Logo bar}{fg=white, bg=white}
\setbeamercolor*{Title bar}{fg=white, bg=oxygenbrown}
\setbeamercolor*{Location bar}{fg=oxygenorange,bg=oxygenlightgray}
\setbeamercolor*{frametitle}{parent=Title bar}
\setbeamercolor*{block title}{bg=oxygenbrown,fg=white}
\setbeamercolor*{block body}{bg=oxygenlightgray,fg=oxygengray}
\setbeamercolor*{block title alerted}{bg=red,fg=white}

\setbeamercolor*{normal text}{bg=white,fg=oxygengray}
\setbeamercolor*{section in head/foot}{bg=oxygenbrown,fg=white}

\usecolortheme[named=oxygenorange]{structure}

\setbeamerfont{section in head/foot}{size=\tiny,series=\normalfont}
\setbeamerfont{frametitle}{size=\large}
\setbeamerfont{institute}{size=\scriptsize}
\setbeamerfont{date}{size=\scriptsize}


\pgfdeclareimage[height=\beamer@headheight]{logoes}{logoes}
\pgfdeclareimage[height=\beamer@headheight]{logolesse}{logolesse}
\pgfdeclareimage[height=\beamer@headheight]{logounipampa}{logounipampa}

\addtobeamertemplate{title page}{
	\vskip -6pt
	%\begin{beamercolorbox}[wd=\paperwidth,ht=1.06\beamer@headheight]{Title bar}
	%\begin{beamercolorbox}[leftskip=.1cm,wd=\paperwidth,ht=0.3\beamer@headheight,sep=0.1cm]{Title bar}
	\begin{beamercolorbox}[wd=\paperwidth,ht=1.06\beamer@headheight]{Logo bar}
		\hskip 3pt \pgfuseimage{logounipampa}
		\hskip 60pt \pgfuseimage{logoes}
		\hskip 75pt \pgfuseimage{logolesse} 
		
		%\hfill \pgfuseimage{newlogo}
	\end{beamercolorbox}
}

\setbeamertemplate{frametitle}
{
	\vskip-0.25\beamer@headheight
	\vskip-\baselineskip
	\vskip-0.2cm
	\hskip-0.5cm\usebeamerfont*{frametitle}\insertframetitle
	\vskip-0.10em
	\hskip-0.5cm\usebeamerfont*{framesubtitle}\insertframesubtitle
}


\setbeamertemplate{headline}
{
%  \vskip -5pt
	\begin{beamercolorbox}[wd=\paperwidth,ht=0.2\beamer@headheight]{Title bar}
		\usebeamerfont{section in head/foot}%
		\insertsectionnavigationhorizontal{0pt}{\hskip0.22cm}{}%
	\end{beamercolorbox}

	\begin{beamercolorbox}[wd=\paperwidth,ht=0.8\beamer@headheight]{Title bar}
		\hfill \pgfuseimage{logolesse}
	\end{beamercolorbox}
}
\setbeamertemplate{caption}[numbered]
\setbeamertemplate{footline}
{
	\linethickness{0.1pt}
	\framelatex{
		\begin{beamercolorbox}[leftskip=.1cm,wd=\paperwidth,ht=0.3\beamer@headheight,sep=0.1cm]{Location bar}
			\usebeamerfont{section in head/foot}%
			\insertshortinstitute~|~\insertshortauthor~|~\insertshorttitle~~
			\hfill
			\insertframenumber
			/\inserttotalframenumber
		\end{beamercolorbox}
	}
}